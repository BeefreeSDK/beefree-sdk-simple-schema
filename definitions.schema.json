{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "definitions.schema.json",
    "title": "Definitions",
    "definitions": {
      "padding": {
        "type": "integer",
        "minimum": 0,
        "maximum": 60
      },
      "borderRadius": {
        "type": "integer",
        "minimum": 0,
        "maximum": 60
      },
      "borderWidth": {
        "type": "integer",
        "minimum": 0,
        "maximum": 30
      },
      "typeOfModules": {
        "enum": [
          "button",
          "divider",
          "heading",
          "html",
          "icons",
          "image",
          "list",
          "menu",
          "paragraph",
          "title"
        ]
      },
      "customAttribute": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key", "name", "target"],
        "properties": {
          "key": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "target": {
            "type": "string",
            "enum": ["link", "tag"]
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  }
